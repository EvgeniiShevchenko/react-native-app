{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": ["prettier", "eslint:recommended", "plugin:prettier/recommended", "prettier/react", "plugin:css-modules/recommended"],
    "parser": "babel-eslint",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "react/jsx-filename-extension": [1, {
            "extensions": [".jsx", ".tsx"]
        }],
        "react/jsx-filename-extension": [1, {
            "extensions": [".js", ".jsx"]
        }],
        "css-modules/no-unused-class": [2, {
            "camelCase": true
        }],
        "css-modules/no-undef-class": [2, {
            "camelCase": true
        }],
        "no-console": "warn",
        "no-debugger": "warn",
        "no-alert": "warn",
        "no-unused-vars": "warn",
        "no-await-in-loop": 0,
        "no-empty": 0,
        "no-irregular-whitespace": 0,
        "indent": "off",
        "linebreak-style": "off",
        "react/no-array-index-key": "off",
        "no-underscore-dangle": "off",
        "react/prop-types": "off",
        "no-nested-ternary": "warn",
        "no-plusplus": ["error",
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "prefer-const": [
            "error",
            {
                "destructuring": "all"
            }
        ],
        "arrow-parens": [2, "as-needed"],
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "es5",
                "tabWidth": 2,
                "singleQuote": true,
                "jsxSingleQuote": true,
                "endOfLine": "auto",
                "printWidth": 120
            }
        ]
    },
    "plugins": ["react", "prettier", "html", "css-modules"]
}